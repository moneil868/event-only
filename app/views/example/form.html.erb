<%= form_for @job_application do |f| %>
  <%= f.label :full_name, 'Full Name' %>
  <%= f.text_field :full_name %><br />

  <%= f.label :phone, 'Phone' %>
  <%= f.text_field :phone %><br />

  <%= f.label :hobby, 'Hobby' %>
  <%= f.text_field :hobby %><br />

  <%= f.label :years_experience, 'Years experience' %>
  <%= f.text_field :years_experience %><br />

  <%= f.label :available_date, 'Available date' %>
  <%= f.text_field :available_date %>

  <p><%= f.submit :submit %></p>
<% end %>
